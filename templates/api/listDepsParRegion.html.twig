{% extends 'base.html.twig' %}

{% block title %}Liste des Départements par région{% endblock %}

{% block body %}
<div class="container">
<h1>Liste des Departements</h1>
  <form action="" method="GET"> 
    <div class="row mt-4">
        <div class="col-md-10">
            <div class="form-group">
                <select class="form-control" name="region" id="region">
                    <option value="Toutes">Toutes les régions</option>
                        {% for maRegion in mesRegions %}
                             <option value="{{ maRegion.code }}" {% if app.request.query.get("region") == maRegion.code %}selected {% endif%}>
                              {{ maRegion.nom }} 
                             </option>
                        {% endfor %}
                    </select>
                </div>
             </div>
            <div class="col-md-2">  
                <button type="submit" class=" btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>
    
    <div class="row">
        {% for monDep in mesDeps %}
            <div class="col-md-3 mt-2">
                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">n° {{ monDep.code}} </div>
                        <div class="card-body">
                            <h4 class="card-title">{{  monDep.nom }}  </h4>
                        </div>
                    </div>
                </div>
        {% endfor %}
            </div>
        </div>
        </div>




{% endblock %}
